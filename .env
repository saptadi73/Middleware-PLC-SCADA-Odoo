APP_NAME=fastapi-scada-odoo
ENVIRONMENT=development
LOG_LEVEL=info

DATABASE_URL=postgresql+psycopg2://openpg:openpgpwd@localhost:5432/plc

# PLC Connection (FINS/UDP)
PLC_IP=192.168.1.2
PLC_PORT=9600
PLC_PROTOCOL=udp
PLC_TIMEOUT_SEC=2

# FINS Node Addressing
CLIENT_NODE=1
PLC_NODE=2

PLC_READ_MAP={}
PLC_WRITE_MAP={}

ODOO_BASE_URL=http://localhost:8070
ODOO_URL=http://localhost:8070
ODOO_DB=manukanjabung
ODOO_USERNAME=admin
ODOO_PASSWORD=admin

# Auto-sync MO dari Odoo ke mo_batch table
ENABLE_AUTO_SYNC=true
SYNC_INTERVAL_MINUTES=5
SYNC_BATCH_LIMIT=10
